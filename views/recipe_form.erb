<h2>Add a Recipe</h2>

<form action="/recipe/new" method="post">
  <div class="form-group">
    <label for="recipe_title">Enter the recipe title</label>
    <input class="form-control" type="text" name="recipe_title">
</div>
<div class="form-group">
  <label for="servings">Servings</label>
  <select class="form-control" name="servings">
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5</option>
    <option>6</option>
  </select>
</div>
<div class="form-group">
  <label for="rating">Rating</label>
  <select class="form-control" name="rating">
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5</option>
  </select>
</div>
<div class="form-group">
  <label for="spice">Spiciness</label>
  <select class="form-control" name="spice">
    <option>*</option>
    <option>**</option>
    <option>***</option>
  </select>
</div>
<div class="form-group">
  <label for="cook_time">Enter the cook time</label>
  <input class="form-control" type="time" name="cook_time">
</div>
<!--  INSTRUCTIONS-->
  <button type="submit" class="btn-primary btn">Add Recipe</button>
</form>
